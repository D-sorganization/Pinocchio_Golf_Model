<?xml version="1.0"?>
<robot name="golfer">
  <!-- Golfer Biomechanical Model - Full Body with Golf Club -->
  <!-- Right hand-to-club connection is modeled as constraint in Pinocchio, not as URDF joint -->

  <!-- Material definitions -->
  <material name="skin">
    <color rgba="0.8 0.6 0.4 1.0"/>
  </material>
  <material name="club">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>

  <!-- Base link: Pelvis -->
  <link name="pelvis">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="11.70"/>
      <inertia ixx="0.1337" ixy="0.0" ixz="0.0" iyy="0.1337" iyz="0.0" izz="0.1337"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.20 0.15 0.10"/>
      </geometry>
      <material name="skin"/>
    </visual>
  </link>

  <!-- Note: Full URDF continues with all segments -->
  <!-- See golfer_model_specification.md for complete details -->
  <!-- Right hand-to-club: CONSTRAINT in Pinocchio (not URDF joint) -->

</robot>